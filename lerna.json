{
    "npmClient": "yarn",
    "useWorkspaces": true,
    "command": {
        "version": {
            "allowBranch": "master",
            "conventionalCommits": true,
            "exact": true,
            "message": "chore(release): version",
            "ignoreChanges": ["**/e2e/**", "**/*.md", "**/.spec.js"]
        }
    },
    "packages": [
        "client/*/*",
        "infra/*/*"
    ],
    "version": "0.0.0"
}
