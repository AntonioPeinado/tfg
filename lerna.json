{
    "npmClient": "yarn",
    "useWorkspaces": true,
    "command": {
        "publish": {
            "allowBranch": "master",
            "conventionalCommits": true,
            "exact": true,
            "message": "chore(release): version",
            "ignoreChanges": [
                "**/e2e/**",
                "**/*.md",
                "**/.spec.js"
            ]
        }
    },
    "packages": [
        "client/*/*",
        "infra/*/*"
    ],
    "version": "independent"
}
